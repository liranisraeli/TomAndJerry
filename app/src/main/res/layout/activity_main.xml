    <ImageView
        android:id="@+id/main_IMG_heart1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_heart" />


        <ImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/main_IMG_heart1"
            android:src="@drawable/ic_heart" />

        <ImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/main_IMG_heart2"
            android:src="@drawable/ic_heart" />


<!--    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/panel_Vertical_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_IMG_heart1"
        android:orientation="vertical">




    <LinearLayout
        android:id="@+id/main_layout_boardGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_below="@id/main_IMG_heart1"
        android:orientation="vertical"
        android:background="#C8B681"
        >
        <!--Row 0-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- [0,0]-->
            <ImageView
                android:id="@+id/main_IMG_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:src="@drawable/ic_empty"
                />
            <!-- [0,1]-->
            <ImageView
                android:id="@+id/main_IMG_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_tom"
                />
            <!--  [0,2]-->
            <ImageView
                android:id="@+id/main_IMG_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty"
               />


        </LinearLayout>

        <!--Row 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <!-- [1,0]-->

            <ImageView
                android:id="@+id/main_IMG_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty"
                />

            <!-- [1,1]-->
            <ImageView
                android:id="@+id/main_IMG_11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty"
                />

            <!-- [1,2]-->
            <ImageView
                android:id="@+id/main_IMG_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty"
                />

        </LinearLayout>

        <!--Row 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- [2,0]-->

            <ImageView
                android:id="@+id/main_IMG_20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty" />

            <!-- [2,1]-->
            <ImageView
                android:id="@+id/main_IMG_21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_empty"
             />

            <!-- [2,2]-->
            <ImageView
                android:id="@+id/main_IMG_22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
