    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:layout_below="@id/main_layout_boardGame"

        >

        <!--Row 5-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
        <!-- [5,0]-->

        <ImageButton
            android:id="@+id/main_BTN_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_up"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            app:icon="@drawable/ic_arrow_up"
            android:background="@drawable/style"
            android:backgroundTint="#f44434"
            app:iconSize="30dp"
            app:iconGravity="textTop"
            />


    </LinearLayout>

            <!--Row 6-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <!-- [6,0]-->

                <ImageButton
                    android:id="@+id/main_BTN_left"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/style"
                    android:backgroundTint="#f44434"
                    android:scaleType="fitCenter"
                    app:icon="@drawable/ic_arrow_up"
                    app:iconGravity="textTop"
                    app:iconSize="30dp"
                    app:srcCompat="@drawable/ic_arrow_left"


                    />

                <ImageView
                    android:id="@+id/main_IMG_empty"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    />


                <ImageButton
                    android:id="@+id/main_BTN_right"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_arrow_right"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_arrow_right"
                    android:background="@drawable/style"
                    android:backgroundTint="#f44434"
                    app:iconSize="30dp"
                    app:iconGravity="textTop"
                    />

            </LinearLayout>

            <!--Row 7-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <!-- [7,0]-->

                <ImageButton
                    android:id="@+id/main_BTN_down"
                    android:layout_width="50dp"
